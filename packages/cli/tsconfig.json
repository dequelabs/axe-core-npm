{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/lib", "./src/bin"]
}
