{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es2015",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["dom", "es2015", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src/lib", "./src/bin"]
}
