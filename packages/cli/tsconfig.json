{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5"
    }
  },
  "include": ["./src/lib", "./src/bin"]
}
