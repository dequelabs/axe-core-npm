{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5"
    }
  },
  "include": ["src"]
}
