{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5"
    }
  },
  "include": ["src"],
  "exclude": ["test"]
}
